    <script>
        function displayBooks() {
            const books = JSON.parse(localStorage.getItem('books')) || [];
            const bookList = document.getElementById('book-list');

            bookList.innerHTML = '';

            if (books.length === 0) {
                bookList.innerHTML = '<p>No books available.</p>';
                return;
            }

            const table = document.createElement('table');
            table.setAttribute('border', '1');
            const headerRow = table.insertRow();

            const headers = ['Name', 'Author', 'Publisher', 'Publishing Date', 'Actions'];
            headers.forEach(headerText => {
                const headerCell = document.createElement('th');
                headerCell.textContent = headerText;
                headerRow.appendChild(headerCell);
            });

            books.forEach((book, index) => {
                const row = table.insertRow();
                row.insertCell(0).textContent = book.name;
                row.insertCell(1).textContent = book.author;
                row.insertCell(2).textContent = book.publisher;
                row.insertCell(3).textContent = book.publishd;

                const actionsCell = row.insertCell(4);
                const editButton = document.createElement('button');
                editButton.textContent = 'Edit';
                editButton.onclick = () => editBook(index);
                actionsCell.appendChild(editButton);

                const deleteButton = document.createElement('button');
                deleteButton.textContent = 'Delete';
                deleteButton.onclick = () => deleteBook(index);
                actionsCell.appendChild(deleteButton);
            });

            bookList.appendChild(table);
        }

        function addBook(event) {
            event.preventDefault();

            const name = document.getElementById('name').value;
            const author = document.getElementById('author').value;
            const publisher = document.getElementById('publisher').value;
            const publishd = document.getElementById('publishd').value;

            const newBook = { name, author, publisher, publishd };

            let books = JSON.parse(localStorage.getItem('books')) || [];
            books.push(newBook);
            localStorage.setItem('books', JSON.stringify(books));

            document.getElementById('main').reset();
            displayBooks();
        }

        function editBook(index) {
            const books = JSON.parse(localStorage.getItem('books')) || [];
            const book = books[index];

            document.getElementById('name').value = book.name;
            document.getElementById('author').value = book.author;
            document.getElementById('publisher').value = book.publisher;
            document.getElementById('publishd').value = book.publishd;

            const submitButton = document.querySelector('.submit');
            submitButton.textContent = 'Update Book';

            document.getElementById('main').onsubmit = function(event) {
                event.preventDefault();

                books[index] = {
                    name: document.getElementById('name').value,
                    author: document.getElementById('author').value,
                    publisher: document.getElementById('publisher').value,
                    publishd: document.getElementById('publishd').value
                };

                localStorage.setItem('books', JSON.stringify(books));
                document.getElementById('main').reset();
                submitButton.textContent = 'ADD BOOK';
                document.getElementById('main').onsubmit = addBook;
                displayBooks();
            };
        }

        function deleteBook(index) {
            const books = JSON.parse(localStorage.getItem('books')) || [];
            books.splice(index, 1);
            localStorage.setItem('books', JSON.stringify(books));
            displayBooks();
        }

        // Initial form submission setup
        document.getElementById('main').onsubmit = addBook;

        // Display books on page load
        window.onload = displayBooks;
    </script>
</body>

